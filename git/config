[init]
	templatedir = ~/.config/git/templates/

[core]
	editor = nvim

[alias]
	s = status -s
	ss = status
	d = diff
	ds = diff --staged
	c = commit
	a = add
	l = "log -n 10 --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
	b = branch
	co = checkout
	unstage = reset HEAD

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    unmerged = blue bold


[color "status"]
    added=green
    changed=yellow
    untracked=red
[pull]
	rebase = true
[gpg]
	program = gpg2

[url "git@gitlab.com:abios"]
	insteadOf = https://gitlab.com/abios

[url "git@github.com:AbiosGaming"]
	insteadOf = https://github.com/AbiosGaming
